{
  "manifest_version": 3,
  "name": "DD Owl",
  "version": "1.0.0",
  "description": "Automated due diligence data extraction from QCC and Tianyancha",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.qcc.com/*",
    "https://*.qichacha.com/*",
    "https://*.tianyancha.com/*",
    "http://localhost:8080/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.qcc.com/*", "https://*.qichacha.com/*"],
      "js": ["content-scripts/qcc.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.tianyancha.com/*"],
      "js": ["content-scripts/tianyancha.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "DD Owl"
  }
}
